<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prime.mm_kunyi.activities.LogInActivity">

    <ImageView
        android:id="@+id/ivLogIn"
        android:layout_width="match_parent"
        android:src="@mipmap/ic_launcher_round"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/ivAppIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/empty_my_job" />

    <TextView
        android:layout_below="@id/ivAppIcon"
        android:id="@+id/tvAppName"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        android:textSize="20sp"
        android:layout_margin="@dimen/margin_medium"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGoogleSingIn"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textAllCaps="true"
        android:padding="@dimen/margin_large"
        android:textColor="@color/colorPrimary"
        android:text="You Just Need One Tap" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btnGoogleSingIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginBottom="33dp"
        android:src="@drawable/ic_touch_app_black_24dp" />

</RelativeLayout>
